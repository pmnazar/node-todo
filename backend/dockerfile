# Use Node.js LTS
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install --production

# Copy backend source code
COPY . .

# Build TypeScript
RUN npm run build

# Expose backend port
EXPOSE 3000

# Start server from compiled JS
CMD ["node", "dist/server.js"]
